<%# if current_user == @booking.user %>
  <%= simple_form_for([@booking, @review], html: { class: "review_form" }) do |f| %>
     <%= f.input :content %>
     <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience", id: "#review_rating" %>
     <%= f.submit class: "d-none" %>
  <% end %>
<%# end %>
